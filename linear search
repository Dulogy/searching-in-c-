// implement linear search in c++

#include<iostream>
using namespace std;
int main(){
    int size,target,i;
    cout << "enter size of array : ";
    cin >> size ;
    int a[size];
    for(i =0; i < size ; i++) {
        cin >> a[i] ; 
    }
    cout << "enter the number which we want to find " <<"\n";
    cin >> target ;
     for( i =0; i < size ; i++) {
        if(a[i] == target){
        cout << target << "found at "<< i <<"index" ;
        break;
        }
    }
    if(i == size)
    cout << target << " is not present in array";
}
